<!-- Header -->

<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous" />

  <!-- Font Awesome CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- CSS files -->
  <link rel="stylesheet" href="css/style.css" />

  <title>
    <%= locals.title ? title : "Placement Adda | SIESCOMS" %>
  </title>
</head>

<!-- Navbar -->

<body>
  <header id="header"></header>
  <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-white shadow-sm bg-white rounded">
    <a class="navbar-brand" href="./"><img src="/img/logo.jpg" alt="SIESCOMS" style="width: 40%; height: auto" />
      <span class="placement-adda h4 my-auto" style="color: #f26d21">Placement Adda</span></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item ml-3">
          <a class="nav-link" href="./">Home</a>
        </li>
        <li class="nav-item ml-3">
          <a class="nav-link" href="#about-section">About Us</a>
        </li>
        <li class="nav-item dropdown ml-3">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Placements
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="./placement">
              Campus Placements
            </a>
            <div class="dropdown-divider"></div>
            <a href="./companies" class="dropdown-item">
              Apply to companies
            </a>
          </div>
        </li>
        <li class="nav-item dropdown ml-3">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Prepare
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="./aptitude"> Aptitude </a>
            <div class="dropdown-divider"></div>
            <a href="./programming" class="dropdown-item"> Programming </a>
          </div>
        </li>
        <li class="nav-item dropdown ml-3">
          <% if (req.cookies.studentLogin || req.cookies.adminLogin) { %>
            <% if (req.cookies.studentLogin) { %>
              <a href="/logout"><button class="btn"><i class="fas fa-sign-out-alt"></i> Logout
                  User</button></a>
              <% }else if (req.cookies.adminLogin) { %>
                <a href="/admin-logout"><button class="btn"><i class="fas fa-sign-out-alt"></i> Logout
                    Admin</button></a>
                <% } }else{ %>
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <i class="fa-solid fa-user"></i>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item">
                      Not Registered? <a class="ml-5" href="./register">Sign Up</a>
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="./login" class="dropdown-item text-center">
                      Login<i class="fa fa-sign-in" aria-hidden="true"></i>
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="./admin-login" class="dropdown-item text-center">
                      Admin<i class="fa-solid fa-user-gear"></i>
                    </a>
                  </div>
                  <%} %>
        </li>
      </ul>
    </div>
  </nav>
  <!-- /Navbar -->

  <!-- /Header -->